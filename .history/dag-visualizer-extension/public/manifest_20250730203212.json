{
  "manifest_version": 3,
  "name": "DAG可视化器",
  "version": "1.0.0",
  "description": "Fe-Helper式DAG工作流可视化工具 - 支持JSON粘贴、文件加载和ReactFlow专业渲染",
  "author": "DAG Visualization Team",

  "action": {
    "default_title": "打开DAG可视化器"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage"
  ],

  "web_accessible_resources": [
    {
      "resources": ["index.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  }
} 